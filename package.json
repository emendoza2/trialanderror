{
  "name": "trialanderror",
  "version": "1.0.0",
  "description": "A personal blog",
  "scripts": {
    "clean": "del _site",
    "watch-css": "tailwindcss -i ./assets/css/styles.css -o ./_site/css/styles.css -w",
    "watch-js": "esbuild ./assets/js/scripts.js --outfile=./_site/js/scripts.js --bundle --target=es2018 --watch",
    "start": "cross-env NODE_ENV=development concurrently \"node hash\"  \"cross-env ELEVENTY_ENV=development eleventy --serve\"  \"npm:watch-*\"",
    "build-css": "tailwindcss -i ./assets/css/styles.css -o ./_site/css/styles.css --minify",
    "build-js": "esbuild ./assets/js/scripts.js --outfile=./_site/js/scripts.js  --bundle --target=es2018 --minify",
    "build": "cross-env NODE_ENV=production concurrently \"npm:build-*\" && node hash && cross-env ELEVENTY_ENV=production eleventy",
    "publish:page": "node -r dotenv/config scripts/publish-page"
  },
  "keywords": [
    "eleventy",
    "starter",
    "TailwindCSS",
    "Alpine.js"
  ],
  "author": "Elijah Mendoza<hello@elijahmendoza.nom.za>",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-upgrade-help": "^1.0.1",
    "alpinejs": "^3.0.6",
    "autoprefixer": "^10.4.0",
    "concurrently": "^7.0.0",
    "del-cli": "^4.0.0",
    "esbuild": "^0.14.0",
    "html-minifier": "^4.0.0",
    "md5": "^2.3.0",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.7"
  },
  "dependencies": {
    "@11ty/eleventy-img": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "markdown-it": "^13.0.1",
    "markdown-it-image-figures": "^2.1.0",
    "markdown-it-katex": "^2.0.3",
    "markdown-it-remove": "^1.0.2"
  }
}
